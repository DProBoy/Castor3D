debug_overlays true

scene "Scene"
{
	background_colour 0.5 0.5 0.5 1.0
	ambient_light 0 0 0 1

	material "Silver"
	{
		type legacy
		pass
		{
			ambient 0.0745 0.0745 0.0745 1.0
			diffuse 0.75164 0.75164 0.75164 1.0
			emissive 0.0 0.0 0.0 1.0
			specular 0.628281 0.628281 0.628281 1.0
			shininess 51.2
		}
	}

	material "WhiteEmit"
	{
		type legacy
		pass
		{
			emissive 1 1 1 1
			ambient 1 1 1 1
		}
	}

	scene_node "LightNode"
	{
		orientation 1 0 0 45
	}

	scene_node "SpotLightNode"
	{
		orientation 1 0 0 45
		position 0.0 100.0 -100.0
	}

	scene_node "PointLightNode"
	{
		position 0.0 100.0 0.0
	}

	light "Light"
	{
		type directional
		parent "LightNode"
		colour 1.0 1.0 1.0
		intensity 0.0 0.8 1.0 1.0
	}

	light "SpotLight"
	{
		type spot
		parent "SpotLightNode"
		colour 1.0 0.0 0.0
		intensity 0.0 0.8 1.0 1.0
		attenuation 1.0 0.0001 0.0001
		cut_off 20
	}

	light "PointLight"
	{
		type point
		parent "PointLightNode"
		colour 0.0 1.0 0.0
		intensity 0.0 0.8 1.0 1.0
		attenuation 1.0 0.0001 0.0001
	}

	object "SpotLight"
	{
		parent "SpotLightNode"
		cast_shadows false

		mesh "SpotLightMesh"
		{
			type cube 1.0 1.0 4.0
		}

		material "WhiteEmit"
	}

	object "PointLight"
	{
		parent "PointLightNode"
		cast_shadows false

		mesh "PointLightMesh"
		{
			type sphere 20 1
		}

		material "WhiteEmit"
	}

	scene_node "FinalNode"
	{
		position 0.0 0.0 0.0
	}
	object "FinalPrimitive"
	{
		parent "FinalNode"
		mesh "Mesh"
		{
			type torus 40 40 25 50
		}
		material "Silver"
	}

	scene_node "MainCameraNode"
	{
		position 0.0 0.0 -200.0
	}
	camera "MainCamera"
	{
		parent "MainCameraNode"
		primitive triangles
		viewport "MainViewport"
		{
			type perspective
			fov_y 45.0
			aspect_ratio 1.778
			near 0.1
			far 20000.0
		}
	}

	window "Window"
	{
		render_target
		{
			format argb32
			size screen_size
			scene "Scene"
			camera "MainCamera"
			technique "deferred"
		}
		fullscreen false
		vsync false
	}
}
