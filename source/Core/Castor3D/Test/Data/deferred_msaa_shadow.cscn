debug_overlays true

scene "Scene"
{
	background_colour 0.5 0.5 0.5 1.0
	ambient_light 0.5 0.5 0.5 1.0

	material "Silver"
	{
		type legacy
		pass
		{
			ambient 0.0745	0.0745	0.0745 1.0
			diffuse 0.75164	0.75164	0.75164 1.0
			emissive 0.0 0.0 0.0 1.0
			specular 0.628281 0.628281 0.628281 1.0
			shininess 51.2
			two_sided true
		}
	}

	material "Gold"
	{
		type legacy
		pass
		{
			ambient 0.24725 0.1995 0.0745 1.0
			diffuse 0.75164 0.60648 0.22648 1.0
			emissive 0.0 0.0 0.0 1.0
			specular 0.628281 0.555802 0.366065 1.0
			shininess 51.2
			two_sided true
		}
	}

	material "Copper"
	{
		type legacy
		pass
		{
			ambient 0.19125 0.0735 0.0225 1.0
			diffuse 0.7038 0.27048 0.0828 1.0
			emissive 0.0 0.0 0.0 1.0
			specular 0.256777 0.137622 0.086014 1.0
			shininess 51.2
			two_sided true
		}
	}

	material "WhiteEmit"
	{
		type legacy
		pass
		{
			emissive 1 1 1 1
			ambient 1 1 1 1
		}
	}

	scene_node "LightNode"
	{
		orientation 1 0 0 45
	}

	light "Light"
	{
		type directional
		parent "LightNode"
		colour 1.0 1.0 1.0
		intensity 0.0 0.8 1.0 1.0
		shadow_producer true
	}

	scene_node "Plane"
	{
		position 0.0 0.0 50.0
		orientation 1.0 0.0 0.0 90.0
	}

	scene_node "Plane2"
	{
		position 0.0 50.0 150.0
	}

	scene_node "Torus"
	{
		position 0.0 30.0 0.0
	}

	object "Plane"
	{
		parent "Plane"

		mesh "Plane"
		{
			type "plane" -width_subdiv=0 -depth_subdiv=0 -width=200 -depth=200
		}

		material "Gold"
	}

	object "Plane2"
	{
		parent "Plane2"
		receive_shadows false

		mesh "Plane2"
		{
			type "plane" -width_subdiv=0 -depth_subdiv=0 -width=200 -depth=200
		}

		material "Copper"
	}

	object "Torus"
	{
		parent "Torus"

		mesh "Torus"
		{
			type "torus" -inner_count=30 -outer_count=30 -inner_size=15 -outer_size=30
		}

		material "Silver"
	}

	scene_node "MainCameraNode"
	{
		position 0.0 200.0 -200.0
		orientation 1 0 0 45
	}

	camera "MainCamera"
	{
		parent "MainCameraNode"

		viewport "MainViewport"
		{
			type perspective
			fov_y 45.0
			aspect_ratio 1.778
			near 0.1
			far 20000.0
		}
	}

	window "Window"
	{
		render_target
		{
			format argb32
			size screen_size
			scene "Scene"
			camera "MainCamera"
			technique "deferred_msaa" -samples_count=8
		}

		fullscreen false
		vsync false
	}
}
