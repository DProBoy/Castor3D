debug_overlays true

scene "Scene"
{
	background_colour 0.5 0.5 0.5 1.0
	ambient_light 0.5 0.5 0.5 1.0

	material "Silver"
	{
		pass
		{
			ambient 0.0745	0.0745	0.0745 1.0
			diffuse 0.75164	0.75164	0.75164 1.0
			emissive 0.0 0.0 0.0 1.0
			specular 0.628281 0.628281 0.628281 1.0
			shininess 51.2
			two_sided true
		}
	}

	material "Gold"
	{
		pass
		{
			ambient 0.24725 0.1995 0.0745 1.0
			diffuse 0.75164 0.60648 0.22648 1.0
			emissive 0.0 0.0 0.0 1.0
			specular 0.628281 0.555802 0.366065 1.0
			shininess 51.2
			two_sided true
		}
	}

	material "WhiteEmit"
	{
		pass
		{
			emissive 1 1 1 1
			ambient 1 1 1 1
		}
	}

	scene_node "LightNode"
	{
		orientation 1 0 0 45
	}

	light "Light"
	{
		type directional
		parent "LightNode"
		colour 1.0 1.0 1.0
		intensity 0.0 0.8 1.0 1.0
		shadow_producer true
	}

	scene_node "Plane"
	{
		position 0.0 0.0 50.0
		orientation 1.0 0.0 0.0 90.0
	}

	scene_node "Plane2"
	{
		position 0.0 50.0 150.0
	}

	scene_node "Torus"
	{
		position 0.0 30.0 0.0
	}

	object "Plane"
	{
		parent "Plane"

		mesh "Plane"
		{
			type plane 0 0 200 200
		}

		material "Gold"
	}

	object "Plane2"
	{
		parent "Plane2"

		mesh "Plane2"
		{
			type plane 0 0 200 200
		}

		material "Gold"
	}

	object "Torus"
	{
		parent "Torus"

		mesh "Torus"
		{
			type torus 30 30 15 30
		}

		material "Silver"
	}

	scene_node "MainCameraNode"
	{
		position 0.0 200.0 -200.0
		orientation 1 0 0 45
	}

	camera "MainCamera"
	{
		parent "MainCameraNode"

		viewport "MainViewport"
		{
			type perspective
			fov_y 45.0
			aspect_ratio 1.778
			near 0.1
			far 20000.0
		}
	}

	scene_node "LightCameraNode"
	{
		orientation 1 0 0 24
	}

	camera "LightCamera"
	{
		parent "LightCameraNode"

		viewport "LightViewport"
		{
			type ortho
			left -512.0
			right 512.0
			top -512.0
			bottom 512.0
			near -512.0
			far 512.0
		}
	}

	window "Window"
	{
		render_target
		{
			format argb32
			//size screen_size
			size 1024 1024
			scene "Scene"
			//camera "MainCamera"
			camera "LightCamera"
		}

		fullscreen false
		vsync false
	}
}
