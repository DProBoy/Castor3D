debug_overlays true

scene "Scene"
{
	background_colour 0.5 0.5 0.5 1.0
	ambient_light 0.5 0.5 0.5 1.0

	material "Silver"
	{
		type legacy
		pass
		{
			ambient 0.0745	0.0745	0.0745 1.0
			diffuse 0.75164	0.75164	0.75164 1.0
			emissive 0.0 0.0 0.0 1.0
			specular 0.628281 0.628281 0.628281 1.0
			shininess 51.2
		}
	}

	material "Gold"
	{
		type legacy
		pass
		{
			ambient 0.24725 0.1995 0.0745 1.0
			diffuse 0.75164 0.60648 0.22648 1.0
			emissive 0.0 0.0 0.0 1.0
			specular 0.628281 0.555802 0.366065 1.0
			shininess 51.2
			two_sided true
		}
	}

	material "WhiteEmit"
	{
		type legacy
		pass
		{
			emissive 1 1 1 1
			ambient 1 1 1 1
		}
	}

	scene_node "PointLightNode1"
	{
		position 0 50 0
	}

	scene_node "PointLightNode2"
	{
		position 0 -50 0
	}

	scene_node "SpotLightNode1"
	{
		orientation 1 0 0 45
		position 0.0 100.0 -100.0
	}

	scene_node "SpotLightNode2"
	{
		orientation 0.82 -0.5 -0.25 95
		position 100.0 100.0 0.0
	}

	light "PointLight1"
	{
		type point
		parent "PointLightNode1"
		colour 1.0 1.0 1.0
		intensity 0.0 0.8 1.0 1.0
		attenuation 1.0 0.02 0.0
		shadow_producer true
	}

	light "PointLight2"
	{
		type point
		parent "PointLightNode2"
		colour 1.0 1.0 1.0
		intensity 0.0 0.8 1.0 1.0
		attenuation 1.0 0.02 0.0
		shadow_producer true
	}

	light "SpotLight1"
	{
		type spot
		parent "SpotLightNode1"
		colour 1.0 1.0 1.0
		intensity 0.0 0.8 1.0 1.0
		attenuation 1.0 0.0 0.0
		cut_off 20
		shadow_producer true
	}

	light "SpotLight2"
	{
		type spot
		parent "SpotLightNode2"
		colour 1.0 1.0 1.0
		intensity 0.0 0.8 1.0 1.0
		attenuation 1.0 0.0 0.0
		cut_off 20
		shadow_producer true
	}

	scene_node "Cube"
	{
	}

	scene_node "SphereRight"
	{
		position 100 0 0
	}

	scene_node "SphereTop"
	{
		position 0 100 0
	}

	scene_node "SphereFar"
	{
		position 0 0 100
	}

	scene_node "Torus"
	{
	}

	object "PointLight1"
	{
		parent "PointLightNode1"
		cast_shadows false

		mesh "PointLightMesh"
		{
			type "sphere" -subdiv=20 -radius=1
		}

		material "WhiteEmit"
	}

	object "PointLight2"
	{
		parent "PointLightNode2"
		cast_shadows false
		mesh "PointLightMesh"
		material "WhiteEmit"
	}

	object "SpotLight1"
	{
		parent "SpotLightNode1"
		cast_shadows false

		mesh "SpotLightMesh"
		{
			type "cube" -width=1 -height=1 -depth=4
		}

		material "WhiteEmit"
	}

	object "SpotLight2"
	{
		parent "SpotLightNode2"
		cast_shadows false
		mesh "SpotLightMesh"
		material "WhiteEmit"
	}

	object "Cube"
	{
		parent "Cube"

		mesh "Cube"
		{
			type "cube" -width=400 -height=400 -depth=400
		}

		material "Gold"
	}

	object "SphereRight"
	{
		parent "SphereRight"

		mesh "Sphere"
		{
			type "sphere" -subdiv=20 -radius=10
		}

		material "Silver"
	}

	object "SphereTop"
	{
		parent "SphereTop"

		mesh "Sphere"
		material "Silver"
	}

	object "SphereFar"
	{
		parent "SphereFar"

		mesh "Sphere"
		material "Silver"
	}

	object "Torus"
	{
		parent "Torus"

		mesh "Torus"
		{
			type "torus" -inner_count=30 -outer_count=30 -inner_size=15 -outer_size=30
		}

		material "Silver"
	}

	scene_node "MainCameraNode"
	{
		position 0.0 80.0 -100.0
	}

	camera "MainCamera"
	{
		parent "MainCameraNode"

		viewport "MainViewport"
		{
			type perspective
			fov_y 45.0
			aspect_ratio 1.778
			near 0.1
			far 20000.0
		}
	}

	window "Window"
	{
		render_target
		{
			format argb32
			size screen_size
			scene "Scene"
			camera "MainCamera"
			technique "deferred"
		}

		fullscreen false
		vsync false
	}
}
